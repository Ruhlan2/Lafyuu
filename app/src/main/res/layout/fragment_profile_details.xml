<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".presentation.ui.account.profile.ProfileDetailsFragment">


    <com.google.android.material.button.MaterialButton
        android:id="@+id/back_btn"
        style="@style/Widget.Material3.Button.IconButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginVertical="28dp"
        android:layout_marginStart="16dp"
        app:icon="@drawable/left"
        app:iconTint="@color/grey"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:rippleColor="@color/white" />

    <TextView
        android:id="@+id/textView9"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="12dp"
        android:fontFamily="@font/inter_semibold"
        android:text="Profile"
        android:textColor="@color/blue_d"
        android:textSize="25sp"
        app:layout_constraintBottom_toBottomOf="@+id/back_btn"
        app:layout_constraintStart_toEndOf="@+id/back_btn"
        app:layout_constraintTop_toTopOf="@+id/back_btn" />

    <com.google.android.material.divider.MaterialDivider
        android:id="@+id/materialDivider2"
        android:layout_width="0dp"
        android:layout_height="2dp"
        android:layout_marginTop="20dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/back_btn" />

    <androidx.cardview.widget.CardView
        android:id="@+id/cardView6"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="24dp"
        android:elevation="0dp"
        app:cardCornerRadius="50dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/materialDivider2">

        <ImageView
            android:id="@+id/profileimg"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@drawable/imgprofile" />
    </androidx.cardview.widget.CardView>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginStart="16dp"
        app:layout_constraintBottom_toBottomOf="@+id/cardView6"
        app:layout_constraintStart_toEndOf="@+id/cardView6"
        app:layout_constraintTop_toTopOf="@+id/cardView6">

        <TextView
            android:id="@+id/fullName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="5dp"
            android:fontFamily="@font/inter_semibold"
            android:text="Maximus Gold"
            android:textColor="@color/blue_d"
            android:textSize="20sp"
            app:layout_constraintBottom_toBottomOf="@+id/cardView6"
            app:layout_constraintStart_toEndOf="@+id/cardView6"
            app:layout_constraintTop_toTopOf="@+id/cardView6" />

        <TextView
            android:id="@+id/username"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="derlaxy"
            android:textColor="@color/grey"
            android:textSize="16sp" />

    </LinearLayout>


    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/cardView6">

        <LinearLayout
            android:id="@+id/linearLayout7"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <com.google.android.material.button.MaterialButton
                style="@style/Widget.Material3.Button.OutlinedButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/inter_semibold"
                android:text="Gender"
                android:textColor="@color/blue_d"
                android:textSize="18sp"
                android:clickable="false"
                app:cornerRadius="0dp"
                app:icon="@drawable/gender_female_duotone_svgrepo_com"
                app:iconPadding="15dp"
                app:iconSize="24sp"
                app:iconTint="@color/blue"
                app:layout_constraintTop_toBottomOf="@+id/cardView6"
                app:strokeWidth="0dp" />

            <com.google.android.material.button.MaterialButton
                style="@style/Widget.Material3.Button.OutlinedButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/inter_semibold"
                android:text="Birthday"
                android:textColor="@color/blue_d"
                android:textSize="18sp"
                app:cornerRadius="0dp"
                android:clickable="false"
                app:icon="@drawable/calendar_lines_pen_svgrepo_com"
                app:iconPadding="15dp"
                app:iconSize="24sp"
                app:iconTint="@color/blue"
                app:layout_constraintTop_toBottomOf="@+id/cardView6"
                app:strokeWidth="0dp" />

            <com.google.android.material.button.MaterialButton
                style="@style/Widget.Material3.Button.OutlinedButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/inter_semibold"
                android:text="Email"
                android:textColor="@color/blue_d"
                android:textSize="18sp"
                android:clickable="false"
                app:cornerRadius="0dp"
                app:icon="@drawable/letter"
                app:iconPadding="15dp"
                app:iconSize="24sp"
                app:iconTint="@color/blue"
                app:layout_constraintTop_toBottomOf="@+id/cardView6"
                app:strokeWidth="0dp" />

            <com.google.android.material.button.MaterialButton
                style="@style/Widget.Material3.Button.OutlinedButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/inter_semibold"
                android:text="Phone Number"
                android:clickable="false"
                android:textColor="@color/blue_d"
                android:textSize="18sp"
                app:cornerRadius="0dp"
                app:icon="@drawable/phone_calling_svgrepo_com"
                app:iconPadding="15dp"
                app:iconSize="24sp"
                app:iconTint="@color/blue"
                app:layout_constraintTop_toBottomOf="@+id/cardView6"
                app:strokeWidth="0dp" />

            <com.google.android.material.button.MaterialButton
                style="@style/Widget.Material3.Button.OutlinedButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/inter_semibold"
                android:text="Change Password"
                android:textColor="@color/blue_d"
                android:clickable="false"
                android:textSize="18sp"
                app:cornerRadius="0dp"
                app:icon="@drawable/lock"
                app:iconPadding="15dp"
                app:iconSize="24sp"
                app:iconTint="@color/blue"
                app:layout_constraintTop_toBottomOf="@+id/cardView6"
                app:strokeWidth="0dp" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/linearLayout8"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="end"
            android:orientation="vertical"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <com.google.android.material.button.MaterialButton
                style="@style/Widget.Material3.Button.OutlinedButton"
                android:id="@+id/gender"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:drawableEnd="@drawable/right_2_svgrepo_com"
                android:drawableTint="@color/grey"
                android:fontFamily="@font/inter_regular"
                android:text="Male"
                android:textColor="@color/grey"
                android:textSize="15sp"
                app:rippleColor="@color/white"
                app:iconTint="@color/grey"
                app:layout_constraintTop_toBottomOf="@+id/cardView6"
                app:strokeWidth="0dp" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/birth"
                style="@style/Widget.Material3.Button.OutlinedButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:drawableEnd="@drawable/right_2_svgrepo_com"
                android:drawableTint="@color/grey"
                android:fontFamily="@font/inter_regular"
                android:text="12-12-2000"
                android:textColor="@color/grey"
                android:textSize="15sp"
                app:rippleColor="@color/white"
                app:cornerRadius="0dp"
                app:iconTint="@color/grey"
                app:layout_constraintTop_toBottomOf="@+id/cardView6"
                app:strokeWidth="0dp" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/email"
                style="@style/Widget.Material3.Button.OutlinedButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:drawableEnd="@drawable/right_2_svgrepo_com"
                android:drawableTint="@color/grey"
                android:fontFamily="@font/inter_regular"
                android:text="Derlaxy@yahoo.com"
                android:textColor="@color/grey"
                android:textSize="15sp"
                app:rippleColor="@color/white"
                app:cornerRadius="0dp"
                app:iconTint="@color/grey"
                app:layout_constraintTop_toBottomOf="@+id/cardView6"
                app:strokeWidth="0dp" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/number"
                style="@style/Widget.Material3.Button.OutlinedButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:drawableEnd="@drawable/right_2_svgrepo_com"
                android:drawableTint="@color/grey"
                android:fontFamily="@font/inter_regular"
                android:text="(307) 555-0133"
                android:textColor="@color/grey"
                android:textSize="15sp"
                app:cornerRadius="0dp"
                app:rippleColor="@color/white"
                app:iconTint="@color/grey"
                app:layout_constraintTop_toBottomOf="@+id/cardView6"
                app:strokeWidth="0dp" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/password"
                style="@style/Widget.Material3.Button.OutlinedButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:drawableEnd="@drawable/right_2_svgrepo_com"
                android:drawableTint="@color/grey"
                android:fontFamily="@font/inter_regular"
                android:text="•••••"
                android:textColor="@color/grey"
                android:textSize="15sp"
                app:cornerRadius="0dp"
                app:rippleColor="@color/white"
                app:iconTint="@color/grey"
                app:layout_constraintTop_toBottomOf="@+id/cardView6"
                app:strokeWidth="0dp" />

        </LinearLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
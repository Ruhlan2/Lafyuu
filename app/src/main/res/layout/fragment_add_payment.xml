<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".presentation.ui.account.payment.AddPaymentFragment">



    <TextView
        android:id="@+id/textView14"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="26dp"
        android:fontFamily="@font/inter_bold"
        android:text="Payment"
        android:layout_marginStart="12dp"
        android:textColor="@color/blue_d"
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="@+id/back_btn"
        app:layout_constraintStart_toEndOf="@+id/back_btn"
        app:layout_constraintTop_toTopOf="parent" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/back_btn"
        style="@style/Widget.Material3.Button.IconButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginVertical="28dp"
        android:layout_marginStart="16dp"
        app:icon="@drawable/left"
        app:iconTint="@color/grey"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:rippleColor="@color/white" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="25dp"
        app:layout_constraintTop_toBottomOf="@+id/back_btn">


        <com.google.android.material.button.MaterialButton
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:backgroundTint="@color/white"
            android:fontFamily="@font/inter_bold"
            android:paddingVertical="18dp"
            app:icon="@drawable/card_svgrepo_com"
            app:iconTint="@color/blue"
            app:iconSize="30sp"
            app:iconPadding="20dp"
            android:textAlignment="viewStart"
            android:text="Credit Card Or Debit"
            android:textColor="@color/blue_d"
            android:textSize="16sp"
            app:cornerRadius="0dp"
            app:rippleColor="#EAEFFE"
            app:strokeWidth="0dp" />

        <com.google.android.material.button.MaterialButton
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:backgroundTint="@color/white"
            android:fontFamily="@font/inter_bold"
            android:paddingVertical="18dp"
            android:text="PayPal"
            app:iconPadding="20dp"
            app:icon="@drawable/paypal_svgrepo_com"
             app:iconTint="@null"
            app:iconSize="30sp"
            android:textAlignment="viewStart"
            android:textColor="@color/blue_d"
            android:textSize="16sp"
            app:cornerRadius="0dp"
            app:rippleColor="#EAEFFE"
            app:strokeWidth="0dp" />

        <com.google.android.material.button.MaterialButton
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:backgroundTint="@color/white"
            android:fontFamily="@font/inter_bold"
            android:paddingVertical="18dp"
            android:text="Bank Transfer"
            app:iconPadding="20dp"
            android:textColor="@color/blue_d"
            app:icon="@drawable/bank_svgrepo_com"
            app:iconTint="@color/blue"
            app:iconSize="30sp"
            android:textAlignment="viewStart"
            android:textSize="16sp"
            app:cornerRadius="0dp"
            app:rippleColor="#EAEFFE"
            app:strokeWidth="0dp" />

    </LinearLayout>



</androidx.constraintlayout.widget.ConstraintLayout>